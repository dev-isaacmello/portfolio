---
import { Icon } from 'astro-icon/components';
import AnimatedElement from './AnimatedElement.astro';
import { getExperiences, getEducation } from '../consts/about';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const experiences = getExperiences(t);
const education = getEducation(t);
---

<section id="about" class="py-20 lg:py-32 relative overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-r from-purple-400/10 to-blue-400/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-40 h-40 bg-gradient-to-r from-green-400/10 to-emerald-400/10 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-r from-pink-400/5 to-purple-400/5 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
    
    <AnimatedElement direction="bottom" delay={200}>
      <div class="text-center mb-20">
        <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-slate-100 to-slate-200 dark:from-slate-800/20 dark:to-slate-700/20 rounded-full mb-6 border border-slate-200/50 dark:border-slate-700/30">
          <Icon name="lucide:user" class="w-4 h-4 text-slate-600 dark:text-slate-400 mr-2" />
          <span class="text-sm font-medium text-slate-700 dark:text-slate-300">{t('about.badge')}</span>
        </div>
        
        <h2 class="text-4xl lg:text-6xl font-bold mb-6 bg-gradient-to-r from-slate-800 via-slate-900 to-black dark:from-white dark:via-gray-100 dark:to-gray-200 bg-clip-text text-transparent">
          {t('about.title')}
        </h2>
        
        <p class="text-lg lg:text-xl text-slate-700 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed">
          {t('about.subtitle')}
        </p>
      </div>
    </AnimatedElement>

    <div class="flex flex-col gap-12 mb-20">
      
      <AnimatedElement direction="left" delay={400}>
        <div class="lg:col-span-2">
          <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl p-8 lg:p-10 border border-gray-200/50 dark:border-gray-700/50 shadow-xl shadow-gray-200/50 dark:shadow-gray-900/50">
            <div class="flex items-center mb-8">
              <div class="w-16 h-16 bg-gradient-to-br from-slate-800 to-black dark:from-white dark:to-gray-100 rounded-2xl flex items-center justify-center mr-6 shadow-lg">
                <Icon name="lucide:user" class="w-8 h-8 text-white dark:text-black" />
              </div>
              <div>
                <h3 class="text-2xl lg:text-3xl font-bold text-black dark:text-white mb-2">
                  {t('about.who.title')}
                </h3>
                <p class="text-slate-700 dark:text-gray-300">{t('about.who.subtitle')}</p>
              </div>
            </div>
            
            <div class="space-y-6 text-slate-700 dark:text-gray-300 leading-relaxed">
              <p>
                {t('about.who.description1')}
              </p>
              <p>
                {t('about.who.description2')}
              </p>
              <p>
                {t('about.who.description3')}
              </p>
            </div>
          </div>
        </div>
      </AnimatedElement>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      
      <AnimatedElement direction="left" delay={1000}>
        <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl p-8 lg:p-10 border border-gray-200/50 dark:border-gray-700/50 shadow-xl shadow-gray-200/30 dark:shadow-gray-900/30">
          <div class="flex items-center mb-8">
            <div class="w-16 h-16 bg-gradient-to-br from-slate-800 to-black dark:from-white dark:to-gray-100 rounded-2xl flex items-center justify-center mr-6 shadow-lg">
              <Icon name="lucide:briefcase" class="w-8 h-8 text-white dark:text-black" />
            </div>
            <div>
              <h3 class="text-2xl lg:text-3xl font-bold text-black dark:text-white mb-2">
                {t('about.experience.title')}
              </h3>
              <p class="text-slate-700 dark:text-gray-300">{t('about.experience.subtitle')}</p>
            </div>
          </div>
          
          <div class="space-y-8">
            {experiences.map((exp, index) => (
              <div class="relative pl-8 border-l-2 border-gray-200 dark:border-gray-700">
                <div class="absolute -left-1.5 top-0 w-4 h-4 bg-gradient-to-r from-slate-800 to-black dark:from-white dark:to-gray-100 rounded-full shadow-lg"></div>
                <div class="mb-3">
                  <span class="inline-block px-3 py-1 text-sm font-semibold text-slate-600 dark:text-slate-400 bg-slate-50 dark:bg-slate-900/20 rounded-full">
                    {exp.year}
                  </span>
                </div>
                <h4 class="text-xl font-bold text-black dark:text-white mb-2">
                  {exp.title}
                </h4>
                <p class="text-lg font-semibold text-slate-700 dark:text-gray-300 mb-3">
                  {exp.company}
                </p>
                <p class="text-slate-600 dark:text-gray-400 leading-relaxed mb-4">
                  {exp.description}
                </p>
                
                <div class="flex flex-wrap gap-2">
                  {exp.tags.map((tag) => (
                    <span class="px-3 py-1 text-xs font-medium bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-gray-300 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      </AnimatedElement>

      <AnimatedElement direction="right" delay={1200}>
        <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl p-8 lg:p-10 border border-gray-200/50 dark:border-gray-700/50 shadow-xl shadow-gray-200/30 dark:shadow-gray-900/30">
          <div class="flex items-center mb-8">
            <div class="w-16 h-16 bg-gradient-to-br from-slate-800 to-black dark:from-white dark:to-gray-100 rounded-2xl flex items-center justify-center mr-6 shadow-lg">
              <Icon name="lucide:graduation-cap" class="w-8 h-8 text-white dark:text-black" />
            </div>
            <div>
              <h3 class="text-2xl lg:text-3xl font-bold text-black dark:text-white mb-2">
                {t('about.education.title')}
              </h3>
              <p class="text-slate-700 dark:text-gray-300">{t('about.education.subtitle')}</p>
            </div>
          </div>
          
          <div class="space-y-8">
            {education.map((edu, index) => (
              <div class="relative pl-8 border-l-2 border-gray-200 dark:border-gray-700">
                <div class="absolute -left-1.5 top-0 w-4 h-4 bg-gradient-to-r from-slate-800 to-black dark:from-white dark:to-gray-100 rounded-full shadow-lg"></div>
                <div class="mb-3">
                  <span class="inline-block px-3 py-1 text-sm font-semibold text-slate-600 dark:text-slate-400 bg-slate-50 dark:bg-slate-900/20 rounded-full">
                    {edu.year}
                  </span>
                </div>
                <h4 class="text-xl font-bold text-black dark:text-white mb-2">
                  {edu.degree}
                </h4>
                <p class="text-lg font-semibold text-slate-700 dark:text-gray-300 mb-3">
                  {edu.institution}
                </p>
                <p class="text-slate-600 dark:text-gray-400 leading-relaxed mb-4">
                  {edu.description}
                </p>
                
                <div class="inline-flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-slate-50 to-slate-100 dark:from-slate-900/20 dark:to-slate-800/20 rounded-full border border-slate-200/50 dark:border-slate-700/30">
                  <Icon name="lucide:star" class="w-4 h-4 text-slate-600 dark:text-slate-400" />
                  <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">GPA: {edu.gpa}</span>
                </div>
              </div>
            ))}
          </div>
        </div>
      </AnimatedElement>
    </div>
  </div>
</section>
