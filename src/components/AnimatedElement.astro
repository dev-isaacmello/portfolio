---
import AnimatedElementInteractive from './interactive/AnimatedElementInteractive.astro';

export interface Props {
  direction?: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right' | 'left' | 'right' | 'top' | 'bottom';
  delay?: number;
  duration?: number;
  threshold?: number;
  class?: string;
}

const { 
  direction = 'bottom-right', 
  delay = 0, 
  duration = 2400,
  threshold = 0.1,
  class: className = ''
} = Astro.props;
---

<AnimatedElementInteractive 
  direction={direction}
  delay={delay}
  duration={duration}
  threshold={threshold}
  class={className}
>
  <slot />
</AnimatedElementInteractive>

