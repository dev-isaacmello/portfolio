---
import { Icon } from 'astro-icon/components';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Dados das redes sociais
const socialLinks = [
  {
    name: 'GitHub',
    icon: 'lucide:github',
    url: 'https://github.com/isaacmello',
    color: 'hover:text-gray-900 dark:hover:text-white'
  },
  {
    name: 'LinkedIn',
    icon: 'lucide:linkedin',
    url: 'https://linkedin.com/in/isaacmello',
    color: 'hover:text-blue-600 dark:hover:text-blue-400'
  },
  {
    name: 'Twitter',
    icon: 'lucide:twitter',
    url: 'https://twitter.com/isaacmello',
    color: 'hover:text-blue-400 dark:hover:text-blue-300'
  },
  {
    name: 'Instagram',
    icon: 'lucide:instagram',
    url: 'https://instagram.com/isaacmello',
    color: 'hover:text-pink-600 dark:hover:text-pink-400'
  }
];

// Ano atual
const currentYear = new Date().getFullYear();
---

<footer id="footer" class="relative overflow-hidden py-16">
  <!-- Cosmic Interaction Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Floating Orbs for Footer -->
    <div class="footer-orb orb-1 absolute w-4 h-4 bg-gradient-to-r from-purple-400 to-blue-400 rounded-full opacity-0 blur-sm"></div>
    <div class="footer-orb orb-2 absolute w-3 h-3 bg-gradient-to-r from-green-400 to-emerald-400 rounded-full opacity-0 blur-sm"></div>
    
    <!-- Side-entering Stars -->
    <div class="footer-side-star star-left absolute w-2 h-2 bg-white rounded-full opacity-0 shadow-lg"></div>
    <div class="footer-side-star star-right absolute w-2 h-2 bg-blue-300 rounded-full opacity-0 shadow-lg"></div>
    
    <!-- Energy Wave -->
    <div class="footer-wave absolute w-full h-1 bg-gradient-to-r from-transparent via-purple-500/20 to-transparent opacity-0"></div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Footer Content -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Section -->
      <div 
        class="lg:col-span-2"
        data-animate="slide"
        data-direction="left"
        data-distance="150"
      >
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-12 h-12 bg-gradient-to-br from-slate-800 via-slate-900 to-black dark:from-white dark:via-gray-100 dark:to-gray-200 rounded-2xl flex items-center justify-center shadow-lg">
            <Icon name="lucide:code" class="w-7 h-7 text-white dark:text-black" />
          </div>
          <div>
            <h3 class="text-2xl font-black bg-gradient-to-r from-slate-800 via-slate-900 to-black dark:from-white dark:via-gray-100 dark:to-gray-200 bg-clip-text text-transparent">
              Isaac Mello
            </h3>
            <p class="text-sm text-slate-700 dark:text-gray-300 font-medium">
              {t('footer.brand.subtitle')}
            </p>
          </div>
        </div>
        
        <p class="text-slate-700 dark:text-gray-200 text-lg leading-relaxed mb-6">
          {t('footer.brand.description')}
        </p>
        
        <!-- Social Links -->
        <div class="flex space-x-4">
          {socialLinks.map((social, index) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group p-3 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl border border-white/20 dark:border-white/10 hover:border-slate-800/50 dark:hover:border-white/50 transition-all duration-500 hover:scale-110 hover:-translate-y-1 hover:shadow-lg hover:shadow-slate-800/20 dark:hover:shadow-white/20"
              data-animate="scale"
              data-animate-delay={200 + (index * 100)}
            >
              <Icon name={social.icon} class="w-5 h-5 text-slate-700 dark:text-gray-300 group-hover:text-slate-800 dark:group-hover:text-white transition-colors duration-300" />
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div 
        data-animate="slide"
        data-direction="top"
        data-distance="100"
        data-animate-delay="400"
      >
        <h4 class="text-lg font-bold text-black dark:text-white mb-6">
          {t('footer.links.title')}
        </h4>
        <ul class="space-y-3">
          <li 
            data-animate="fade"
            data-animate-delay={600}
          >
            <a
              href="#home"
              class="text-slate-700 dark:text-gray-300 hover:text-slate-800 dark:hover:text-white transition-colors duration-300 hover:translate-x-1 inline-block"
            >
{t('nav.home')}
            </a>
          </li>
          <li 
            data-animate="fade"
            data-animate-delay={700}
          >
            <a
              href="#about"
              class="text-slate-700 dark:text-gray-300 hover:text-slate-800 dark:hover:text-white transition-colors duration-300 hover:translate-x-1 inline-block"
            >
{t('nav.about')}
            </a>
          </li>
          <li 
            data-animate="fade"
            data-animate-delay={800}
          >
            <a
              href="#projects"
              class="text-slate-700 dark:text-gray-300 hover:text-slate-800 dark:hover:text-white transition-colors duration-300 hover:translate-x-1 inline-block"
            >
{t('nav.projects')}
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div 
        data-animate="slide"
        data-direction="right"
        data-distance="150"
        data-animate-delay="600"
      >
        <h4 class="text-lg font-bold text-black dark:text-white mb-6">
          {t('footer.contact.title')}
        </h4>
        <ul class="space-y-3">
          <li 
            class="flex items-center space-x-3"
            data-animate="fade"
            data-animate-delay={800}
          >
            <div class="p-2 bg-slate-100 dark:bg-slate-800/30 rounded-lg">
              <Icon name="lucide:mail" class="w-4 h-4 text-slate-600 dark:text-slate-400" />
            </div>
            <span class="text-slate-700 dark:text-gray-300">
              isaacmello@rede.ulbra.br
            </span>
          </li>
          <li 
            class="flex items-center space-x-3"
            data-animate="fade"
            data-animate-delay={900}
          >
            <div class="p-2 bg-slate-100 dark:bg-slate-800/30 rounded-lg">
              <Icon name="lucide:map-pin" class="w-4 h-4 text-slate-600 dark:text-slate-400" />
            </div>
            <span class="text-slate-700 dark:text-gray-300">
              Torres, RS - Brasil
            </span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div 
      class="mt-12 pt-8 border-t border-white/20 dark:border-white/10 text-center"
      data-animate="diagonal"
      data-direction="bottom-right"
      data-distance="100"
      data-animate-delay="1000"
    >
      <p class="text-slate-600 dark:text-gray-400">
        Â© {currentYear} Isaac Mello. {t('footer.copyright')}
      </p>
    </div>
  </div>
</footer>

<style>
  /* Footer Cosmic Elements */
  .footer-orb {
    transition: all 1s ease-out;
    transform: scale(0);
  }

  .footer-orb.visible {
    opacity: 1;
    transform: scale(1);
    animation: float 4s ease-in-out infinite;
  }

  .orb-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .orb-2 {
    top: 60%;
    right: 15%;
    animation-delay: 1s;
  }

  .footer-side-star {
    transition: all 1.2s ease-out;
  }

  .footer-side-star.visible {
    opacity: 1;
    transform: translateX(0) translateY(0);
  }

  .star-left {
    top: 35%;
    left: -20px;
    transform: translateX(-50px) translateY(20px);
  }

  .star-right {
    top: 65%;
    right: -20px;
    transform: translateX(50px) translateY(-20px);
  }

  .footer-wave {
    transition: all 1.5s ease-out;
    transform: scaleX(0);
    top: 50%;
  }

  .footer-wave.visible {
    opacity: 1;
    transform: scaleX(1);
    animation: wave-pulse 4s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.1);
    }
  }

  @keyframes wave-pulse {
    0%, 100% {
      opacity: 0;
      transform: scaleX(0);
    }
    50% {
      opacity: 1;
      transform: scaleX(1);
    }
  }
</style>
