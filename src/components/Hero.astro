---
import { Icon } from 'astro-icon/components';
import AnimatedElement from './AnimatedElement.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const skills = [
  { name: 'C#', icon: 'logos:c-sharp', color: 'from-purple-500 to-purple-600' },
  { name: 'Flutter', icon: 'logos:flutter', color: 'from-purple-400 to-purple-500' },
  { name: 'Dart', icon: 'logos:dart', color: 'from-purple-500 to-purple-600' },
  { name: 'JavaScript', icon: 'logos:javascript', color: 'from-purple-400 to-purple-600' },
  { name: 'TypeScript', icon: 'logos:typescript-icon', color: 'from-purple-500 to-purple-600' },
  { name: 'Astro', icon: 'logos:astro', color: 'from-purple-500 to-purple-600' },
  { name: 'Tailwind', icon: 'logos:tailwindcss-icon', color: 'from-purple-400 to-purple-500' },
  { name: 'CSS', icon: 'logos:css-3', color: 'from-purple-500 to-purple-600' },
  { name: 'PostgreSQL', icon: 'logos:postgresql', color: 'from-purple-500 to-purple-600' },
  { name: 'Python', icon: 'logos:python', color: 'from-purple-500 to-purple-600' },
  { name: 'Java', icon: 'logos:java', color: 'from-purple-500 to-purple-600' },
  { name: 'Next.js', icon: 'logos:nextjs-icon', color: 'from-purple-500 to-purple-600' },
  { name: 'React', icon: 'logos:react', color: 'from-purple-500 to-purple-600' },
];
---

<section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden py-8 sm:py-12 lg:py-20">
  <!-- Cosmic Interaction Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Advanced Technological Comet - First Pass -->
    <div class="comet-container comet-1">
      <!-- Main Comet Body -->
      <div class="comet-core absolute w-10 h-10 bg-gradient-to-r from-purple-400 via-purple-500 to-purple-600 rounded-full shadow-[0_0_30px_rgba(147,51,234,0.8),0_0_60px_rgba(168,85,247,0.6),0_0_90px_rgba(196,181,253,0.4)]"></div>
      
      <!-- Comet Tail - Multiple Layers -->
      <div class="comet-tail comet-tail-1 absolute w-32 h-1 bg-gradient-to-r from-purple-400/80 via-purple-500/60 to-purple-600/40 rounded-full blur-sm"></div>
      <div class="comet-tail comet-tail-2 absolute w-24 h-0.5 bg-gradient-to-r from-purple-300/60 via-purple-400/40 to-purple-500/30 rounded-full blur-md"></div>
      <div class="comet-tail comet-tail-3 absolute w-16 h-0.5 bg-gradient-to-r from-purple-200/40 via-purple-300/20 to-purple-400/20 rounded-full blur-lg"></div>
      
      <!-- Energy Particles Around Comet -->
      <div class="comet-particle particle-1 absolute w-1 h-1 bg-purple-300 rounded-full animate-pulse"></div>
      <div class="comet-particle particle-2 absolute w-1.5 h-1.5 bg-purple-400 rounded-full animate-pulse"></div>
      <div class="comet-particle particle-3 absolute w-1 h-1 bg-purple-500 rounded-full animate-pulse"></div>
      <div class="comet-particle particle-4 absolute w-0.5 h-0.5 bg-purple-200 rounded-full animate-pulse"></div>
      
      <!-- 3D Glow Rings -->
      <div class="comet-ring ring-1 absolute w-16 h-16 border border-purple-400/30 rounded-full animate-spin-slow"></div>
      <div class="comet-ring ring-2 absolute w-20 h-20 border border-purple-500/20 rounded-full animate-spin-slow-reverse"></div>
      <div class="comet-ring ring-3 absolute w-24 h-24 border border-purple-600/15 rounded-full animate-spin-slow"></div>
      
      <!-- Quantum Distortion Field -->
      <div class="quantum-field absolute w-32 h-32 bg-gradient-to-r from-purple-400/5 via-purple-500/3 to-purple-600/5 rounded-full blur-2xl"></div>
    </div>
    
    <!-- Advanced Technological Comet - Second Pass -->
    <div class="comet-container comet-2">
      <!-- Main Comet Body -->
      <div class="comet-core absolute w-10 h-10 bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 rounded-full shadow-[0_0_30px_rgba(168,85,247,0.8),0_0_60px_rgba(196,181,253,0.6),0_0_90px_rgba(147,51,234,0.4)]"></div>
      
      <!-- Comet Tail - Multiple Layers -->
      <div class="comet-tail comet-tail-1 absolute w-32 h-1 bg-gradient-to-r from-purple-500/80 via-purple-600/60 to-purple-700/40 rounded-full blur-sm"></div>
      <div class="comet-tail comet-tail-2 absolute w-24 h-0.5 bg-gradient-to-r from-purple-400/60 via-purple-500/40 to-purple-600/30 rounded-full blur-md"></div>
      <div class="comet-tail comet-tail-3 absolute w-16 h-0.5 bg-gradient-to-r from-purple-300/40 via-purple-400/20 to-purple-500/20 rounded-full blur-lg"></div>
      
      <!-- Energy Particles Around Comet -->
      <div class="comet-particle particle-1 absolute w-1 h-1 bg-purple-400 rounded-full animate-pulse"></div>
      <div class="comet-particle particle-2 absolute w-1.5 h-1.5 bg-purple-500 rounded-full animate-pulse"></div>
      <div class="comet-particle particle-3 absolute w-1 h-1 bg-purple-600 rounded-full animate-pulse"></div>
      <div class="comet-particle particle-4 absolute w-0.5 h-0.5 bg-purple-300 rounded-full animate-pulse"></div>
      
      <!-- 3D Glow Rings -->
      <div class="comet-ring ring-1 absolute w-16 h-16 border border-purple-500/30 rounded-full animate-spin-slow"></div>
      <div class="comet-ring ring-2 absolute w-20 h-20 border border-purple-600/20 rounded-full animate-spin-slow-reverse"></div>
      <div class="comet-ring ring-3 absolute w-24 h-24 border border-purple-700/15 rounded-full animate-spin-slow"></div>
      
      <!-- Quantum Distortion Field -->
      <div class="quantum-field absolute w-32 h-32 bg-gradient-to-r from-purple-500/5 via-purple-600/3 to-purple-700/5 rounded-full blur-2xl"></div>
    </div>
    
    <!-- Floating Particles for Hero -->
    <div class="hero-particle particle-1 absolute w-2 h-2 bg-purple-400 rounded-full opacity-0 animate-pulse"></div>
    <div class="hero-particle particle-2 absolute w-1 h-1 bg-purple-500 rounded-full opacity-0 animate-pulse"></div>
    <div class="hero-particle particle-3 absolute w-3 h-3 bg-purple-600 rounded-full opacity-0 animate-pulse"></div>
    <div class="hero-particle particle-4 absolute w-2 h-2 bg-purple-300 rounded-full opacity-0 animate-pulse"></div>
    
    <!-- Energy Waves -->
    <div class="energy-wave wave-1 absolute w-full h-1 bg-gradient-to-r from-transparent via-purple-500/30 to-transparent opacity-0"></div>
    <div class="energy-wave wave-2 absolute w-full h-1 bg-gradient-to-r from-transparent via-purple-600/30 to-transparent opacity-0"></div>
    <div class="energy-wave wave-3 absolute w-full h-1 bg-gradient-to-r from-transparent via-purple-400/30 to-transparent opacity-0"></div>
    
    <!-- Manipulable Black Hole -->
    <div class="black-hole-container black-hole-1">
      <!-- Black Hole Core -->
      <div class="black-hole-core absolute w-16 h-16 bg-black rounded-full shadow-[0_0_50px_rgba(0,0,0,0.9),0_0_100px_rgba(0,0,0,0.8),0_0_150px_rgba(0,0,0,0.7),inset_0_0_30px_rgba(0,0,0,1)]"></div>
      
      <!-- Event Horizon Ring -->
      <div class="event-horizon absolute w-20 h-20 border-2 border-purple-500/40 rounded-full animate-spin-slow"></div>
      
      <!-- Accretion Disk -->
      <div class="accretion-disk absolute w-32 h-8 bg-gradient-to-r from-transparent via-purple-500/20 via-purple-600/30 via-purple-400/20 to-transparent rounded-full blur-sm"></div>
      
      <!-- Gravitational Lensing Effect -->
      <div class="gravitational-lensing absolute w-40 h-40 bg-gradient-to-r from-purple-500/5 via-purple-600/3 via-purple-400/5 to-transparent rounded-full blur-2xl"></div>
      
      <!-- Quantum Particles Around Black Hole -->
      <div class="bh-particle particle-1 absolute w-1 h-1 bg-purple-400 rounded-full animate-pulse"></div>
      <div class="bh-particle particle-2 absolute w-1.5 h-1.5 bg-purple-500 rounded-full animate-pulse"></div>
      <div class="bh-particle particle-3 absolute w-1 h-1 bg-purple-600 rounded-full animate-pulse"></div>
      <div class="bh-particle particle-4 absolute w-0.5 h-0.5 bg-purple-300 rounded-full animate-pulse"></div>
    </div>
    
    <!-- Second Black Hole -->
    <div class="black-hole-container black-hole-2">
      <!-- Black Hole Core -->
      <div class="black-hole-core absolute w-12 h-12 bg-black rounded-full shadow-[0_0_40px_rgba(0,0,0,0.9),0_0_80px_rgba(0,0,0,0.8),0_0_120px_rgba(0,0,0,0.7),inset_0_0_25px_rgba(0,0,0,1)]"></div>
      
      <!-- Event Horizon Ring -->
      <div class="event-horizon absolute w-16 h-16 border-2 border-purple-600/40 rounded-full animate-spin-slow-reverse"></div>
      
      <!-- Accretion Disk -->
      <div class="accretion-disk absolute w-24 h-6 bg-gradient-to-r from-transparent via-purple-600/20 via-purple-700/30 via-purple-500/20 to-transparent rounded-full blur-sm"></div>
      
      <!-- Gravitational Lensing Effect -->
      <div class="gravitational-lensing absolute w-32 h-32 bg-gradient-to-r from-purple-600/5 via-purple-700/3 via-purple-500/5 to-transparent rounded-full blur-2xl"></div>
      
      <!-- Quantum Particles Around Black Hole -->
      <div class="bh-particle particle-1 absolute w-1 h-1 bg-purple-500 rounded-full animate-pulse"></div>
      <div class="bh-particle particle-2 absolute w-1.5 h-1.5 bg-purple-600 rounded-full animate-pulse"></div>
      <div class="bh-particle particle-3 absolute w-1 h-1 bg-purple-700 rounded-full animate-pulse"></div>
      <div class="bh-particle particle-4 absolute w-0.5 h-0.5 bg-purple-400 rounded-full animate-pulse"></div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      
      <!-- Hero Title with Unforgettable Animation -->
      <AnimatedElement direction="bottom-right" delay={200}>
        <div class="mb-8 sm:mb-12 lg:my-20">
          <h1 class="hero-title text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-black leading-tight tracking-tight">
            <span class="block bg-gradient-to-r from-slate-800 via-slate-900 to-black dark:from-white dark:via-gray-100 dark:to-gray-200 bg-clip-text text-transparent">
              {t('hero.name')}
            </span>
          </h1>
          
          <!-- Subtitle with Staggered Animation -->
          <div class="mt-4 sm:mt-6 lg:mt-8">
            <p class="hero-subtitle text-lg sm:text-xl md:text-2xl lg:text-3xl font-medium text-black dark:text-white">
              {t('hero.title')}
            </p>
          </div>
        </div>
      </AnimatedElement>

      <!-- Hero Description with Typing Effect -->
      <AnimatedElement direction="bottom-left" delay={400}>
        <div class="mb-8 sm:mb-12 lg:mb-16 max-w-4xl mx-auto">
                      <p class="hero-description text-base sm:text-lg md:text-xl lg:text-2xl text-slate-700 dark:text-gray-200 leading-relaxed font-light">
              {t('hero.description')}
            </p>
        </div>
      </AnimatedElement>

      <!-- CTA Buttons with Magnetic Effect -->
      <AnimatedElement direction="top-right" delay={600}>
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center mb-12 sm:mb-16 lg:mb-20">
          <a
            href="#projects"
            class="cta-primary group relative px-6 sm:px-8 lg:px-10 py-3 sm:py-4 lg:py-5 bg-gradient-to-r from-slate-800 to-black dark:from-white dark:to-gray-100 text-white dark:text-black font-bold rounded-xl lg:rounded-2xl hover:shadow-xl hover:shadow-slate-800/25 dark:hover:shadow-white/25 hover:scale-105 transition-all duration-500 flex items-center gap-2 sm:gap-3"
          >
            <Icon name="lucide:folder-open" class="w-5 h-5 sm:w-6 sm:h-6" />
                              <span>{t('hero.cta.projects')}</span>
            
            <!-- Enhanced Button Glow Effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-slate-800 to-black dark:from-white dark:to-gray-100 rounded-xl lg:rounded-2xl blur-xl opacity-0 group-hover:opacity-40 transition-opacity duration-500"></div>
            
            <!-- Magnetic Particles -->
            <div class="absolute inset-0 rounded-xl lg:rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-700">
              <div class="absolute top-2 left-2 w-1 h-1 bg-white/60 rounded-full animate-pulse"></div>
              <div class="absolute top-2 right-2 w-1 h-1 bg-white/60 rounded-full animate-pulse" style="animation-delay: 200ms;"></div>
              <div class="absolute bottom-2 left-2 w-1 h-1 bg-white/60 rounded-full animate-pulse" style="animation-delay: 400ms;"></div>
              <div class="absolute bottom-2 right-2 w-1 h-1 bg-white/60 rounded-full animate-pulse" style="animation-delay: 600ms;"></div>
            </div>
          </a>
          
          <a
            href="#about"
            class="cta-secondary group px-6 sm:px-8 lg:px-10 py-3 sm:py-4 lg:py-5 border-2 border-slate-800/30 dark:border-white/30 text-slate-800 dark:text-white font-bold rounded-xl lg:rounded-2xl hover:bg-slate-800/10 dark:hover:bg-white/10 hover:border-slate-800 dark:hover:border-white transition-all duration-500 flex items-center gap-2 sm:gap-3"
          >
            <Icon name="lucide:user" class="w-5 h-5 sm:w-6 sm:h-6" />
                              <span>{t('hero.cta.about')}</span>
            
            <!-- Subtle Glow -->
            <div class="absolute inset-0 rounded-xl lg:rounded-2xl bg-slate-800/5 dark:bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </a>
        </div>
      </AnimatedElement>

      <!-- Skills Section with Clean Modern Design -->
      <AnimatedElement direction="bottom-left" delay={800}>
        <div class="max-w-6xl mx-auto">
          <h3 class="hero-skills-title text-xl sm:text-2xl lg:text-3xl font-bold text-black dark:text-white mb-12 sm:mb-16 text-center">
            <span class="relative inline-block">
                                  <span class="relative z-10 bg-gradient-to-r from-slate-800 via-slate-900 to-black dark:from-white dark:via-gray-100 dark:to-gray-200 bg-clip-text text-transparent">
                      {t('hero.skills.title')}
                    </span>
              <div class="absolute -bottom-3 left-0 w-full h-1 bg-gradient-to-r from-slate-800 via-slate-900 to-black dark:from-white dark:via-gray-100 dark:to-gray-200 rounded-full"></div>
            </span>
          </h3>
          
          <div class="flex flex-wrap justify-center items-center gap-8 sm:gap-10 lg:gap-12">
            {skills.map((skill, index) => (
              <div
                class="skill-item group relative flex flex-col items-center transition-all duration-700 hover:scale-110 hover:-translate-y-2 cursor-pointer"
                style={`animation-delay: ${index * 100}ms`}
                data-skill-name={skill.name}
              >
                 <!-- Enhanced Background with Dark/Light Aura Effect -->
                 <div class="absolute inset-0 -m-4 rounded-3xl opacity-0 group-hover:opacity-100 transition-all duration-1000 group-hover:animate-pulse">
                   <div class="w-full h-full rounded-3xl blur-xl scale-75 group-hover:scale-100 transition-all duration-1000 dark:bg-white/20 bg-slate-800/20"></div>
                 </div>
                 
                 <!-- Secondary Dark/Light Aura Layer -->
                 <div class="absolute inset-0 -m-6 rounded-3xl opacity-0 group-hover:opacity-70 transition-all duration-1500 group-hover:animate-pulse">
                   <div class="w-full h-full rounded-3xl blur-2xl scale-50 group-hover:scale-100 transition-all duration-1500 dark:bg-white/15 bg-slate-800/15"></div>
                 </div>
                 
                 <!-- Third Dark/Light Aura Layer -->
                 <div class="absolute inset-0 -m-8 rounded-3xl opacity-0 group-hover:opacity-50 transition-all duration-2000 group-hover:animate-pulse">
                   <div class="w-full h-full rounded-3xl blur-3xl scale-25 group-hover:scale-100 transition-all duration-2000 dark:bg-white/10 bg-slate-800/10"></div>
                 </div>
               
               <!-- Icon Container with Enhanced Background -->
               <div class="relative mb-3 p-4 rounded-2xl bg-gradient-to-br from-slate-50/80 via-white/60 to-slate-50/80 dark:from-gray-800/80 dark:via-gray-700/60 dark:to-gray-800/80 backdrop-blur-xl border border-slate-200/30 dark:border-gray-600/30 group-hover:border-slate-800/60 dark:group-hover:border-white/60 transition-all duration-500 group-hover:shadow-2xl group-hover:shadow-slate-800/30 dark:group-hover:shadow-white/30 group-hover:bg-gradient-to-br group-hover:from-white/95 group-hover:via-slate-50/90 group-hover:to-white/95 dark:group-hover:from-gray-700/95 dark:group-hover:via-gray-600/20 dark:group-hover:to-gray-700/95">
                 <Icon name={skill.icon} class="w-8 h-8 sm:w-10 sm:h-10 text-slate-700 dark:text-gray-300 group-hover:text-slate-800 dark:group-hover:text-white transition-colors duration-500 relative z-10" />
                   
                 <!-- Enhanced Glow Effect -->
                 <div class="absolute inset-0 rounded-2xl bg-gradient-to-r opacity-0 group-hover:opacity-40 blur-xl transition-all duration-700 dark:bg-white/20 bg-slate-800/20"></div>
                 
                 <!-- Inner Glow Ring -->
                 <div class="absolute inset-0 rounded-2xl border-2 border-transparent group-hover:border-slate-800/60 dark:group-hover:border-white/60 transition-all duration-700 opacity-0 group-hover:opacity-100"></div>
               </div>
               
               <!-- Skill Name with Enhanced Typography -->
               <span class="text-sm sm:text-base font-semibold text-slate-700 dark:text-gray-300 group-hover:text-slate-800 dark:group-hover:text-white transition-colors duration-500 text-center relative z-10 group-hover:drop-shadow-lg">
                 {skill.name}
               </span>
               
               <!-- Enhanced Hover Line with Dark/Light Glow -->
               <div class="absolute -bottom-1 left-1/2 transform -translate-x-1/2 w-0 h-1 bg-gradient-to-r from-slate-800 to-black dark:from-white dark:to-gray-200 group-hover:w-full transition-all duration-700 rounded-full shadow-lg group-hover:shadow-slate-800/50 dark:group-hover:shadow-white/50"></div>
               
               <!-- Floating Dark/Light Particles Around Skill -->
               <div class="absolute -top-2 -left-2 w-2 h-2 bg-slate-600 dark:bg-white rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-bounce transition-all duration-1000 group-hover:animate-ping"></div>
               <div class="absolute -top-2 -right-2 w-2 h-2 bg-slate-700 dark:bg-gray-100 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-bounce transition-all duration-1000 group-hover:animate-ping" style="animation-delay: 200ms;"></div>
               <div class="absolute -bottom-2 -left-2 w-2 h-2 bg-slate-800 dark:bg-gray-200 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-bounce transition-all duration-1000 group-hover:animate-ping" style="animation-delay: 400ms;"></div>
               <div class="absolute -bottom-2 -right-2 w-2 h-2 bg-slate-500 dark:bg-gray-300 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-bounce transition-all duration-1000 group-hover:animate-ping" style="animation-delay: 600ms;"></div>
             </div>
           ))}
         </div>
       </AnimatedElement>
     </div>
   </div>
 </section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fadeInUp {
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  /* Animation delays for skills */
  .animation-delay-200 {
    animation-delay: 200ms;
  }
  
  .animation-delay-400 {
    animation-delay: 400ms;
  }
  
  .animation-delay-600 {
    animation-delay: 600ms;
  }

  /* Hero Cosmic Elements */
  .hero-particle {
    transition: all 0.8s ease-out;
  }

  .hero-particle.visible {
    opacity: 1;
    animation: float 3s ease-in-out infinite;
  }

  .particle-1 {
    top: 20%;
    left: 15%;
    animation-delay: 0s;
  }

  .particle-2 {
    top: 40%;
    right: 20%;
    animation-delay: 1s;
  }

  .particle-3 {
    bottom: 30%;
    left: 25%;
    animation-delay: 2s;
  }

  .particle-4 {
    bottom: 50%;
    right: 30%;
    animation-delay: 3s;
  }

  /* Energy Waves */
  .energy-wave {
    transition: all 1s ease-out;
    transform: scaleX(0);
  }

  .energy-wave.visible {
    opacity: 1;
    transform: scaleX(1);
  }

  .wave-1 {
    top: 25%;
    animation: wave-pulse 4s ease-in-out infinite;
  }

  .wave-2 {
    top: 50%;
    animation: wave-pulse 4s ease-in-out infinite 1.3s;
  }

  .wave-3 {
    top: 75%;
    animation: wave-pulse 4s ease-in-out infinite 2.6s;
  }

  @keyframes wave-pulse {
    0%, 100% {
      opacity: 0;
      transform: scaleX(0);
    }
    50% {
      opacity: 1;
      transform: scaleX(1);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.1);
    }
  }

  /* ===== UNFORGETTABLE HERO ENTRANCE ANIMATIONS ===== */
  
  /* Text Reveal Animation - Captivating Recruiters */
  @keyframes text-reveal {
    0% {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
      filter: blur(2px);
    }
    50% {
      opacity: 0.7;
      transform: translateY(15px) scale(0.98);
      filter: blur(1px);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0px);
    }
  }
  
  .animate-text-reveal {
    animation: text-reveal 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  /* Text Stagger Animation */
  @keyframes text-stagger {
    0% {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  
  .animate-text-stagger {
    animation: text-stagger 1.2s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.3s forwards;
  }

  /* Typing Effect Animation */
  @keyframes typing-effect {
    0% {
      opacity: 0;
      transform: translateY(15px) scale(0.98);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  
  .animate-typing-effect {
    animation: typing-effect 1.5s cubic-bezier(0.4, 0, 0.2, 1) 0.6s forwards;
  }

  /* Button Float Animation */
  @keyframes button-float {
    0%, 100% {
      transform: translateY(0px) scale(1);
    }
    50% {
      transform: translateY(-3px) scale(1.02);
    }
  }
  
  .animate-button-float {
    animation: button-float 3s ease-in-out infinite;
  }

  /* Delayed Button Float */
  @keyframes button-float-delayed {
    0%, 100% {
      transform: translateY(0px) scale(1);
    }
    50% {
      transform: translateY(-2px) scale(1.01);
    }
  }
  
  .animate-button-float-delayed {
