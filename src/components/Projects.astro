---
import { Icon } from 'astro-icon/components';
import AnimatedElement from './AnimatedElement.astro';
import ProjectFilter from './interactive/ProjectFilter.astro';
import { getProjects, getCategories } from '../consts/projects';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const projects = getProjects(t);
const categories = getCategories(t);
---

<section id="projects" class="py-16 sm:py-20 md:py-24 lg:py-28 xl:py-32 relative overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="projects-orb orb-1 absolute w-5 h-5 bg-gradient-to-r from-blue-400 to-cyan-400 rounded-full opacity-0 blur-sm"></div>
    <div class="projects-orb orb-2 absolute w-4 h-4 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full opacity-0 blur-sm"></div>
    
    <div class="projects-side-star star-left-1 absolute w-2 h-2 bg-white rounded-full opacity-0 shadow-lg"></div>
    <div class="projects-side-star star-left-2 absolute w-1 h-1 bg-blue-300 rounded-full opacity-0 shadow-lg"></div>
    <div class="projects-side-star star-right-1 absolute w-2 h-2 bg-green-300 rounded-full opacity-0 shadow-lg"></div>
    <div class="projects-side-star star-right-2 absolute w-1 h-1 bg-yellow-300 rounded-full opacity-0 shadow-lg"></div>
    
    <div class="projects-comet comet-1 absolute w-3 h-1 bg-gradient-to-r from-white via-cyan-300 to-transparent rounded-full opacity-0 shadow-lg"></div>
    <div class="projects-comet comet-2 absolute w-3 h-1 bg-gradient-to-r from-white via-pink-300 to-transparent rounded-full opacity-0 shadow-lg"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 lg:px-10 xl:px-12 relative z-10">
    
    <AnimatedElement direction="bottom-right" delay={200}>
      <div class="text-center mb-16 sm:mb-20 md:mb-24">
        <div class="inline-flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-slate-100 to-slate-200 dark:from-slate-800/30 dark:to-slate-700/30 rounded-full mb-6">
          <Icon name="lucide:folder-open" class="w-4 h-4 text-slate-600 dark:text-slate-400" />
          <span class="text-sm font-medium text-slate-700 dark:text-slate-300">{t('projects.badge')}</span>
        </div>
        
        <h2 class="text-3xl sm:text-4xl md:text-4xl lg:text-6xl xl:text-6xl font-black mb-6 leading-tight">
          <span class="bg-gradient-to-r from-slate-800 via-slate-900 to-black dark:from-white dark:via-gray-100 dark:to-gray-200 bg-clip-text text-transparent">
            {t('projects.title')}
          </span>
        </h2>
        
        <p class="text-lg sm:text-xl md:text-2xl text-slate-700 dark:text-gray-300 max-w-4xl mx-auto leading-relaxed mb-8">
          {t('projects.subtitle')}
        </p>
        
        <ProjectFilter />
      </div>
    </AnimatedElement>

    <AnimatedElement direction="bottom-left" delay={400}>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-10 lg:gap-12">
        {projects.map((project, index) => (
          <div 
            class="project-card group relative bg-white/95 dark:bg-gray-900/95 backdrop-blur-2xl rounded-2xl overflow-hidden border border-gray-100/50 dark:border-gray-800/50 hover:border-slate-300/80 dark:hover:border-white/80 hover:shadow-2xl hover:shadow-slate-500/20 dark:hover:shadow-white/20 transition-all duration-700 hover:scale-[1.02] hover:-translate-y-1"
            data-category={project.category.toLowerCase()}
            style={`animation-delay: ${index * 200}ms`}
          >
          
          <div class="relative h-48 sm:h-56 overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-700">
            <div class="w-full h-full flex items-center justify-center group-hover:scale-105 transition-transform duration-700">
              <Icon name="lucide:image" class="w-20 h-20 text-gray-300 dark:text-gray-600 group-hover:text-slate-400 dark:group-hover:text-slate-300 transition-colors duration-700 group-hover:scale-110" />
            </div>
            
            <div class="absolute top-4 left-4">
              <span class="inline-block px-3 py-1.5 text-xs font-medium bg-white/90 dark:bg-gray-800/90 text-slate-700 dark:text-gray-300 rounded-lg backdrop-blur-sm border border-gray-200/50 dark:border-gray-700/50 group-hover:bg-slate-800 group-hover:text-white group-hover:border-slate-700 transition-all duration-500 group-hover:scale-105">
                {project.category}
              </span>
            </div>
            
            {project.featured && (
              <div class="absolute top-4 right-4">
                <span class="inline-flex items-center space-x-1.5 px-3 py-1.5 text-xs font-medium bg-gradient-to-r from-amber-400 to-orange-500 text-white rounded-lg shadow-sm group-hover:from-amber-300 group-hover:to-orange-400 transition-all duration-500 group-hover:scale-105 group-hover:shadow-md">
                  <Icon name="lucide:star" class="w-3 h-3 group-hover:rotate-12 transition-transform duration-500" />
                  <span>{t('projects.featured')}</span>
                </span>
              </div>
            )}
                        
            <div class="absolute top-3 left-3 w-1.5 h-1.5 bg-slate-600/60 dark:bg-white/60 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-pulse transition-all duration-700"></div>
            <div class="absolute top-3 right-3 w-1.5 h-1.5 bg-slate-700/60 dark:bg-gray-100/60 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-pulse transition-all duration-700" style="animation-delay: 200ms;"></div>
            <div class="absolute bottom-3 left-3 w-1.5 h-1.5 bg-slate-800/60 dark:bg-gray-200/60 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-pulse transition-all duration-700" style="animation-delay: 400ms;"></div>
            <div class="absolute bottom-3 right-3 w-1.5 h-1.5 bg-slate-500/60 dark:bg-gray-300/60 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-pulse transition-all duration-700" style="animation-delay: 600ms;"></div>
          </div>
          
          <div class="p-6 sm:p-8 relative">
            <div class="absolute top-4 left-4 w-2 h-2 border-l border-t border-slate-300/0 group-hover:border-slate-300/100 dark:group-hover:border-white/100 transition-all duration-700 rounded-tl-lg"></div>
            <div class="absolute top-4 right-4 w-2 h-2 border-r border-t border-slate-400/0 group-hover:border-slate-400/100 dark:group-hover:border-gray-100/100 transition-all duration-700 rounded-tr-lg"></div>
            <div class="absolute bottom-4 left-4 w-2 h-2 border-l border-b border-slate-500/0 group-hover:border-slate-500/100 dark:group-hover:border-gray-200/100 transition-all duration-700 rounded-bl-lg"></div>
            <div class="absolute bottom-4 right-4 w-2 h-2 border-l border-b border-slate-600/0 group-hover:border-slate-600/100 dark:group-hover:border-gray-300/100 transition-all duration-700 rounded-br-lg"></div>
            
            <h3 class="text-xl sm:text-2xl font-bold text-black dark:text-white mb-3 transition-colors duration-700 transform-gpu">
              {project.title}
            </h3>
            
            <p class="text-slate-600 dark:text-gray-400 text-sm sm:text-base leading-relaxed mb-6 group-hover:text-slate-700 dark:group-hover:text-gray-300 transition-colors duration-700">
              {project.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-6">
              {project.technologies.map((tech, techIndex) => (
                <span class="px-3 py-1.5 text-xs font-medium bg-slate-100/80 dark:bg-gray-800/80 text-slate-600 dark:text-gray-400 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700/30 hover:text-slate-800 dark:hover:text-slate-300 transition-all duration-300 group-hover:scale-105 hover:shadow-sm"
                      style={`animation-delay: ${techIndex * 100}ms`}>
                  {tech}
                </span>
              ))}
            </div>
            
            <div class="flex space-x-3">
              <a 
                href={project.liveUrl}
                class="flex-1 bg-gradient-to-r from-slate-800 to-black dark:from-white dark:to-gray-100 text-white dark:text-black px-5 py-3 rounded-xl text-sm font-medium text-center transition-all duration-500 hover:scale-105 hover:shadow-lg hover:shadow-slate-800/30 dark:hover:shadow-white/30 group-hover:shadow-xl"
              >
                <Icon name="lucide:external-link" class="w-4 h-4 inline mr-2 group-hover:rotate-12 transition-transform duration-300" />
                {t('projects.view')}
              </a>
              <a 
                href={project.githubUrl}
                class="flex-1 border-2 border-slate-200 dark:border-gray-700 text-slate-700 dark:text-gray-300 hover:border-slate-800 hover:text-slate-800 dark:hover:border-white dark:hover:text-white px-5 py-3 rounded-xl text-sm font-medium text-center transition-all duration-500 hover:scale-105 hover:shadow-lg group-hover:shadow-xl hover:bg-slate-50 dark:hover:bg-slate-800/10"
              >
                <Icon name="lucide:github" class="w-4 h-4 inline mr-2 group-hover:rotate-12 transition-transform duration-300" />
                {t('projects.code')}
              </a>
            </div>
          </div>
          </div>
        ))}
      </div>
    </AnimatedElement>
    
    <AnimatedElement direction="top-right" delay={600}>
      <div class="text-center mt-16 sm:mt-20 md:mt-24">
        <div class="inline-flex items-center space-x-2 px-6 py-3 bg-gradient-to-r from-slate-100 to-slate-200 dark:from-slate-800/30 dark:to-slate-700/30 rounded-full mb-6">
          <Icon name="lucide:mail" class="w-5 h-5 text-slate-600 dark:text-slate-400" />
          <span class="text-sm font-medium text-slate-700 dark:text-slate-300">{t('projects.cta.badge')}</span>
        </div>
        
        <h3 class="text-2xl sm:text-3xl md:text-4xl font-bold text-black dark:text-white mb-4">
          {t('projects.cta.title')}
        </h3>
        
        <p class="text-slate-600 dark:text-gray-300 text-lg mb-8 max-w-2xl mx-auto">
          {t('projects.cta.description')}
        </p>
        
        <a 
          href="#footer"
          class="inline-flex items-center space-x-2 bg-gradient-to-r from-slate-800 to-black dark:from-white dark:to-gray-100 text-white dark:text-black px-8 py-4 rounded-2xl text-lg font-semibold transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-slate-800/30 dark:hover:shadow-white/30"
        >
          <Icon name="lucide:message-circle" class="w-5 h-5" />
          <span>{t('projects.cta.button')}</span>
        </a>
      </div>
    </AnimatedElement>
  </div>
</section>


<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .project-card {
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .project-card:nth-child(1) { animation-delay: 0.1s; }
  .project-card:nth-child(2) { animation-delay: 0.2s; }
  .project-card:nth-child(3) { animation-delay: 0.3s; }

  .projects-orb {
    transition: all 1s ease-out;
    transform: scale(0);
  }

  .projects-orb.visible {
    opacity: 1;
    transform: scale(1);
    animation: float 4s ease-in-out infinite;
  }

  .orb-1 {
    top: 25%;
    left: 12%;
    animation-delay: 0s;
  }

  .orb-2 {
    top: 60%;
    right: 18%;
    animation-delay: 1s;
  }

  .projects-side-star {
    transition: all 1.2s ease-out;
  }

  .projects-side-star.visible {
    opacity: 1;
    transform: translateX(0) translateY(0);
  }

  .star-left-1 {
    top: 30%;
    left: -20px;
    transform: translateX(-50px) translateY(15px);
  }

  .star-left-2 {
    top: 55%;
    left: -20px;
    transform: translateX(-50px) translateY(-25px);
  }

  .star-right-1 {
    top: 40%;
    right: -20px;
    transform: translateX(50px) translateY(-20px);
  }

  .star-right-2 {
    top: 70%;
    right: -20px;
    transform: translateX(50px) translateY(30px);
  }

  .projects-comet {
    transition: all 1.5s ease-out;
    transform: translateX(-100px) translateY(-100px) scale(0.5);
  }

  .projects-comet.visible {
    opacity: 1;
    transform: translateX(0) translateY(0) scale(1);
    animation: shoot-projects 3s ease-out forwards;
  }

  .comet-1 {
    top: 20%;
    left: -30px;
  }

  .comet-2 {
    bottom: 25%;
    right: -30px;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) scale(1);
    }
    50% {
      transform: translateY(-25px) scale(1.1);
    }
  }

  @keyframes shoot-projects {
    0% {
      transform: translateX(-100px) translateY(-100px) scale(0.5);
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    80% {
      opacity: 1;
    }
    100% {
      transform: translateX(400px) translateY(400px) scale(1);
      opacity: 0;
    }
  }
</style>
